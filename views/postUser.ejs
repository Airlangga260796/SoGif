<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <title>POST</title>
    <!-- <link rel="stylesheet" href="style.css"> -->
</head>
<style>
    input {
        background-color: transparent;
        border: 2px solid black;
        border-radius: 5px;
    }


    select {
        font-family: 'Quicksand', sans-serif;
        background-color: transparent;
        border: 2px solid black;
        border-radius: 5px;
    }

    .card-text {
        font-family: 'Quicksand', sans-serif;
        color: white;

    }
</style>

<body class="bg-warning">
    <nav class="navbar navbar-light bg-transparent">
        <div class="container-fluid">
            <a class="navbar-brand">
                <button onclick="location.href='/'" class="btn btn-dark"><i
                        class="fa-solid fa-right-from-bracket"></i></button>
            </a>
        </div>
    </nav>
    <div class="container text-center mt-1">
        <h1>Post User</h1>

        <button class="btn btn-dark" onclick="location.href='/user/add/<%=id%>'">add Post</button><br><br>
        <% if(result.length) { %>

            <% result.forEach(x=> { %>
                <div class="card" style="width: 18rem;background-color: black;">
                    <img src="<%=x.imageURL%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">
                            <%=x.caption%>
                        </p>
                        <p class="card-text">
                            <%=x.like %>
                        </p>
                        <p class="card-text">
                            <%=changeDate(x.createdAt)%>
                        </p>
                        <button onclick="location.href='/user/like/<%=x.id%>'" class="btn btn-light ">LIKE</button>
                        <button onclick="location.href='/user/delete/<%=x.id%>'" class="btn btn-light ">Delete</button>
                    </div>
                </div>

                <% })%>
                    <% } else { %>
                        <h2>You dont have any post yet</h2>
                        <% } %>
    </div>
</body>

</html>